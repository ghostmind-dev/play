{
  "name": "play",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {},
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
    "ghcr.io/shyim/devcontainers-features/bun:0": {},
    "ghcr.io/ghostmind-dev/config/extensions:latest": {},
    "ghcr.io/ghostmind-dev/config/settings:latest": {},
    "ghcr.io/ghostmind-dev/misc/mounts:latest": {},
    "ghcr.io/ghostmind-dev/init/init:latest": {
      "resetLive": true
    }
  },
  "postStartCommand": "deno run -A /usr/local/share/post-start.ts",
  "containerEnv": {
    "SRC": "${containerWorkspaceFolder}",
    "LOCALHOST_SRC": "/Volumes/Projects/ghostmind/play"
  },
  "remoteEnv": {
    "GITHUB_TOKEN": "${localEnv:GITHUB_TOKEN}",
    "VAULT_TOKEN": "${localEnv:VAULT_TOKEN}",
    "VAULT_ADDR": "${localEnv:VAULT_ADDR}"
  },
  "mounts": [
    "source=terminal-history-play,target=/commandhistory,type=volume"
  ],
  "runArgs": [
    "--network=host",
    "--name=play"
  ]
}